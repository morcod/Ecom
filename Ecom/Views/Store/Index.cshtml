@model IEnumerable<Ecom.Models.Catagorie>
@{ ViewBag.Title = "Boutique"; }
<style>
    a {
        color: #0060B6;
        text-decoration: none;
    }

        a:hover {
            color: black;
            text-decoration: underline;
            cursor: pointer;
        }
    #img-container {
        display: inline-block;
        margin: 20px;
        border: 3px solid #D10024;
        border-radius: 25px;
        overflow: hidden;
        width: 90%;
    }
       
            #img-container img {
            display: block;
            height: 240px;
            transition: transform .4s;
            width: 100%;
        }

        #img-container:hover img {
            transform: scale(1.3);
            transform-origin: 50% 50%;
        }
    .cat-link {
        margin: 15px;
        text-align: center;
        color:black;
        text-transform: uppercase;
        font-size: 25px;
    }
    .div-container {
        text-align: center;
    }
</style>
<h2>@ViewBag.Title</h2>






    @foreach(var catagorie in Model)
       {

        <div class="col-sm-6 col-md-4  div-container">
            <div id="img-container">
                <a href="@Url.Action("Browse", new { catagorie = catagorie.Name, id = catagorie.ID })">
                    <img src="@Url.Action("RenderImage", new { id = catagorie.ID })" alt="" style="width:100%">
                </a>
            </div>
            @Html.ActionLink(catagorie.Name, "Browse", new { catagorie = catagorie.Name, id = catagorie.ID }, new { @class = "cat-link" })

        </div>
}

