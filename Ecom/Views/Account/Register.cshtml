@model Ecom.Models.RegisterViewModel
@{ ViewBag.Title = "Register"; }
<style>
    .registerForm {
        background-color: white;
        padding: 50px;
        border: 1px solid #ddd;
        margin-top: 80px;
    }
</style>
<div class="col-sm-offset-3 col-sm-6">
    <div class="registerForm">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group ">
                <div>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "Email invalide")

                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mot de passe", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "Mot de passe  invalide")

                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmer le mot de passe", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "Mot de passe incorrect")
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.TextBox("sec",null, htmlAttributes: new { placeholder = "Votre code de sécurité", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="S'inscrire" />
                </div>
            </div>}
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
