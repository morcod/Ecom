@model Ecom.Models.ResetPasswordViewModel
@{ ViewBag.Title = "Réinitialiser le mot de passe"; }

<h2>@ViewBag.Title.</h2>
<style>
    .reset-pass-div {
        background-color: white;
        padding: 50px;
        border: 1px solid #ddd;
    }
</style>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Code)
                                                <div class="reset-pass-div col-sm-offset-3 col-sm-6">
                                                        <div class="form-group">
                                                            <div>
                                                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                                                @Html.ValidationMessageFor(m => m.Email, "Email invalide")
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div>
                                                                @Html.PasswordFor(m => m.Password, new { placeholder = "Mot de passe", @class = "form-control" })
                                                                @Html.ValidationMessageFor(m => m.Password, "Mot de passe  invalide")
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div>
                                                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmer le mot de passe", @class = "form-control" })
                                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "Mot de passe incorrect")
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="text-center">
                                                                <input type="submit" class="btn btn-success" value="Réinitialiser le mot de passe" />
                                                            </div>
                                                        </div>
                                                        </div>
                                                        }

                                                        @section Scripts {
                                                            @Scripts.Render("~/bundles/jqueryval")
                                                        }
