@model Ecom.Models.LoginViewModel

@{
    ViewBag.Title = "Connexion";
}
<style>
    #loginForm {
        background-color: white;
        border: 1px solid #ddd;
        padding: 50px;
        margin-top: 80px;
    }
</style>
<div class="row">
    <h2>@ViewBag.Title</h2>
    <div class="col-sm-offset-3 col-sm-6  ">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "Email  invalide", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Mot de passe", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "Mot de passe incorrect", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-1 col-xs-11">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            Laissez-moi en session ouverte
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Se connecter" class="btn btn-success" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("S'inscrire ", "Register")
                </p>
                <p>
                    @Html.ActionLink("Mot de passe oublié ", "ForgotPassword")
                </p>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}