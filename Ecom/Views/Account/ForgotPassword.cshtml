@model Ecom.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Mot de passe oublié";
}
<style>
    .send-email-div{
        background-color:white;
        padding:50px;
        border:1px solid #ddd;
    }
</style>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="send-email-div col-sm-offset-3 col-sm-6">
    <div class="form-group">
        <div class="">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "Email  invalide", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <div class="">
            @Html.TextBox("secCode",null,htmlAttributes: new { placeholder = "Votre code de sécurité", @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <div class="text-center">
            <input type="submit" class="btn btn-success" value="Réinitialiser le mot de passe" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
