@model Ecom.Models.ChangePasswordViewModel
@{ ViewBag.Title = "Changer le mot de passe"; }
<style>
    .chng-pass {
        background-color: white;
        padding: 40px;
        border: 1px solid #ddd;
        margin-top:50px;
    }
</style>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
<div class="col-sm-offset-3 col-sm-6">

    <div class="chng-pass">
        <div class="form-group">
            <div class="col-xs-offset-1 col-xs-10">
                @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Mot de passe", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OldPassword, "Mot de passe incorrect", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-1 col-xs-10">
                @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Nouveau mot de passe", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NewPassword, "Mot de passe invalide", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-1 col-xs-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmer le nouveau mot de passe", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NewPassword, "Mot de passe incorrect", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-md-offset-3 col-md-4">
                <input type="submit" value="Changer le mot de passe" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
                    }
                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
