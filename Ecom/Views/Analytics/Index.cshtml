@model Ecom.Models.AnalyticsViewModel

@{ ViewBag.Title = "Statistiques";
    var random = new Random(); }
<style>

    div.sta {
        background-color: white;
        box-shadow: 0 1px 1px rgb(0 0 0 / 10%);
        border-radius: 2px;
        border: 1px solid #ddd;
        min-height: 142px;
        font-size: 50px;
        text-align: center;
        margin: 5px;
    }

    .table {
        max-height: 505px;
        margin-top: 80px;
    }

    div.sta span {
        display: block;
    }

    .sta-container {
        padding: 30px 0;
    }

    th, td {
        border: 1px solid #ddd;
        text-align: center;
    }

    #pieChart {
        overflow: auto;
    }
</style>
<script src="//cdnjs.cloudflare.com/ajax/libs/d3/3.4.4/d3.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/Scripts/d3pie.min.js"></script>
<div class="sta-container">

    <div class="row">
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span class="count">@ViewBag.ProductsCount</span><span>Article(s)</span>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span class="count">@ViewBag.UserCount </span><span>Utilisateur(s)</span>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span class="count">@ViewBag.CategoriesCount </span><span>Catégorie(s)</span>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span class="count">@ViewBag.BrandsCount</span> <span>Marque(s)</span>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span class="count">@ViewBag.OrdersCount</span> <span>Commande(s)</span>
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="sta">
                <span>@ViewBag.SalesRevenue DH</span><span>Revenu total</span>
            </div>
        </div>
    </div>
</div>
<div id="MyLineChart"></div>

<div class="row">
    <div class="col-lg-6">

        <div id="pieChart">
        </div>
    </div>
    <div class="col-lg-6">


        <table class="table">
            <tr>
                <th>
                    Jour
                </th>
                <th>
                    Nombre de commandes
                </th>
            </tr>

            @foreach (var item in Model.OrderData)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @item.OrderCount
                    </td>
                </tr>
            }
        </table>
    </div>


</div>
<script src="https://code.highcharts.com/stock/highstock.js"></script>

<script>
    $('.count').each(function () {
        $(this).prop('Counter', 0).animate({
            Counter: $(this).text()
        }, {
            duration: 1000,
            easing: 'swing',
            step: function (now) {
                $(this).text(Math.ceil(now));
            }
        });
    });



</script>

<script>

  
    Highcharts.stockChart('MyLineChart',{
        charts: { type: 'spline' },
        title: { text: 'Commandes' },
        xAxis: { title: { text: 'Jours' } },
        yAxis: { title: { text: 'Commandes' } },
        series: [{
            type: 'spline', name: 'Commandes', data: [
                @foreach (var item in Model.OrderData)
                        {
                            <text>
                [Date.UTC(@item.OrderDate.Value.Year,@item.OrderDate.Value.Month-1,@item.OrderDate.Value.Day), @item.OrderCount],


                                </text>
                        }
             ],
    tooltip: {
        valueDecimals: 2
    }
     }
   ]
 });




</script>


<script>
            var pie = new d3pie("pieChart", {
                "header": {
                    "title": {
                        "text": "",
                        "fontSize": 24,
                        "font": "open sans"
                    },
                    "subtitle": {
                        "text": "",
                        "color": "#999999",
                        "fontSize": 12,
                        "font": "open sans"
                    },
                    "titleSubtitlePadding": 9
                },
                "footer": {
                    "color": "#999999",
                    "fontSize": 10,
                    "font": "open sans",
                    "location": "bottom-left"
                },
                "size": {
                    "canvasWidth": 590
                },
                "data": {
                    "sortOrder": "value-desc",
                    "content": [

                @foreach (var item in Model.OrderData)
                {

                    var color = String.Format("#{0:X6}", random.Next(0x1000000)); 
                    <text>{
                            "label": "@item.OrderDate.Value.ToString("dd-MM-yyyy")",
                    "value": @item.OrderCount,
                    "color": "@color"
                },</text>
                }

            ]
            },
                "labels": {
                    "outer": {
                        "pieDistance": 32
                    },
                    "inner": {
                        "hideWhenLessThanPercentage": 3
                    },
                    "mainLabel": {
                        "fontSize": 11
                    },
                    "percentage": {
                        "color": "#ffffff",
                        "decimalPlaces": 0
                    },
                    "value": {
                        "color": "#adadad",
                        "fontSize": 11
                    },
                    "lines": {
                        "enabled": true
                    }
                },
                "effects": {
                    "pullOutSegmentOnClick": {
                        "effect": "linear",
                        "speed": 400,
                        "size": 8
                    }
                },
                "misc": {
                    "gradient": {
                        "enabled": true,
                        "percentage": 100
                    }
                }
            });
</script>



