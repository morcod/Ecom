@model Ecom.Models.Order

@{ ViewBag.Title = "Paiement"; }
<style>
 .form-horizontal {
        background-color: white;
        padding: 40px;
        border: 1px solid #ddd;
        margin-top: 20px;
    }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/Scripts/card.js"></script>
<link rel="stylesheet" href="~/Content/card.css">
<script>
    $('.active form').card({ container: $('.card-wrapper') })
    $('form').card({
 ]
        container: '.card-wrapper',
        numberInput: 'input#number', 
        expiryInput: 'input#expiry', 
        cvcInput: 'input#cvc', 
        nameInput: 'input#name', 

        width: 200, 
        formatting: true 
    });
</script>



<div class="col-sm-offset-3 col-sm-6">
    <h2>@ViewBag.Title</h2>

    <div class="form-horizontal bs-component">
        @using (Html.BeginForm(new { @class = "form-horizontal" }))
        {



    <div class="form-group">
        <div class="">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Prénom" } })
            @Html.ValidationMessageFor(model => model.FirstName, "Prénom invalide", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Nom" } })
            @Html.ValidationMessageFor(model => model.LastName, "Nom invalide", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Adresse" } })
            @Html.ValidationMessageFor(model => model.Address, "Adresse invalide", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="">
            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Ville" } })
            @Html.ValidationMessageFor(model => model.City, "Ville invalide", new { @class = "text-danger" })
        </div>
    </div>
 
   
 
    <div class="form-group">
        <div class="">
            @Html.EditorFor(model => model.CreditCard, new { htmlAttributes = new { @class = "form-control", @placeholder = "Numéro de carte de crédit" } })
            @Html.ValidationMessageFor(model => model.CreditCard, "Numéro de carte de crédit invalide", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <span>Date d'expiration</span>
        <div class="">
            @Html.EditorFor(model => model.Experation)
            @Html.ValidationMessageFor(model => model.Experation, "Date d'expiration invalide", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <span>Carte de crédit</span>

             <div class="">
            <select class="form-control" id="select">
                @foreach (var ccType in ViewBag.CreditCardTypes)
                {
    <option>@ccType</option>}
            </select>
        </div>
    </div>


    <br>

    <div class="form-group">
        <div class="text-center">
            <button type="submit" class="btn btn-success">Commander</button>
        </div>
    </div>
}
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
